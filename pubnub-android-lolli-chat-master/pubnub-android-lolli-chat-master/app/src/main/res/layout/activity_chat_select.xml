<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_chat_select"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="me.kevingleason.pubnubchat.ChatSelectActivity">

    <Button
        android:text="Click Me"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@color/pn_red"
        android:layout_marginLeft="35dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="93dp"
        android:id="@+id/personal" />

    <Button
        android:text="Click Me"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/personal"
        android:layout_alignLeft="@+id/personal"
        android:layout_alignStart="@+id/personal"
        android:background="@color/pn_red"
        android:layout_marginTop="92dp"
        android:id="@+id/group" />

    <TextView
        android:text="To Send Personal Messages"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/personal"
        android:layout_toRightOf="@+id/personal"
        android:layout_toEndOf="@+id/personal"
        android:layout_marginLeft="41dp"
        android:layout_marginStart="71dp"
        android:layout_marginTop="13dp"
        android:id="@+id/textView3" />

    <TextView
        android:text="To Chat In a Group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/personal"
        android:layout_toRightOf="@+id/personal"
        android:layout_toEndOf="@+id/personal"
        android:layout_marginLeft="41dp"
        android:layout_marginStart="71dp"
        android:layout_marginTop="153dp"
        android:id="@+id/grouptv" />


</RelativeLayout>
